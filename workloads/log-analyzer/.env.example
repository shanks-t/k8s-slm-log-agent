# Log Analyzer Service - Environment Configuration
# Copy this to .env and adjust for your local environment

# Prompt Templates Directory
# K8s default: /app/prompt_templates (ConfigMap mount or baked into image)
# Local dev: use relative path from project root
LOG_ANALYZER_PROMPTS_DIR=./prompt_templates

# Service Configuration
LOG_ANALYZER_SERVICE_NAME=log-analyzer
LOG_ANALYZER_SERVICE_VERSION=0.1.0
LOG_ANALYZER_LOG_LEVEL=INFO

# Loki Configuration (use localhost for local dev with port-forward)
LOG_ANALYZER_LOKI_URL=http://localhost:3100
LOG_ANALYZER_LOKI_TIMEOUT=10
LOG_ANALYZER_LOKI_MAX_RETRIES=3

# LLM Configuration (use localhost for local dev with port-forward)
LOG_ANALYZER_LLM_URL=http://localhost:8080
LOG_ANALYZER_LLM_MODEL=llama-3.2-3b-instruct
LOG_ANALYZER_LLM_TIMEOUT=30
LOG_ANALYZER_LLM_TEMPERATURE=0.1
LOG_ANALYZER_LLM_MAX_TOKENS=512

# Observability
LOG_ANALYZER_OTEL_ENABLED=true
LOG_ANALYZER_OTEL_EXPORTER=console
